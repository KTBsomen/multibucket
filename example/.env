# Sample environment configuration for multibucket
# Rename this file to .env and modify as needed

# Server configuration
PORT=4000

# API Security
API_KEY=your-secret-api-key-here

# Configuration source (file path or URL)
CONFIG_SOURCE=./storage-config.json

# Load balancing strategy (round-robin, least-used, least-errors, weighted-random)
LOAD_BALANCE_STRATEGY=round-robin

# Default expiry time for presigned URLs (in seconds)
DEFAULT_EXPIRY=3600

# AWS S3 Primary Configuration
S3_PRIMARY_BUCKET=my-s3-bucket
S3_PRIMARY_REGION=us-east-1
S3_PRIMARY_ACCESS_KEY=YOUR_AWS_ACCESS_KEY_ID
S3_PRIMARY_SECRET_KEY=YOUR_AWS_SECRET_ACCESS_KEY
S3_PRIMARY_PUBLIC_URL=https://my-s3-public-domain.com

# Cloudflare R2 Primary Configuration
R2_PRIMARY_BUCKET=my-r2-bucket
R2_PRIMARY_ENDPOINT=https://account-id.r2.cloudflarestorage.com
R2_PRIMARY_ACCESS_KEY=YOUR_R2_ACCESS_KEY_ID
R2_PRIMARY_SECRET_KEY=YOUR_R2_SECRET_ACCESS_KEY
R2_PRIMARY_PUBLIC_URL=https://cdn.example.com
